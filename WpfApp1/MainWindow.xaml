<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Вся таблица из бд</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel>
                        <DataGrid Name="fullTable" ItemsSource="{Binding}" Margin="10" Background="White" MinHeight="500" FontSize="20"></DataGrid>
                        <Button Content="Загрузить" Margin="10" Background="White" FontSize="30" MaxWidth="150" Click="Button_Click"></Button>
                    </StackPanel>                    
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
